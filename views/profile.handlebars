<div id="main-body">
    <div class="wrapper">
        <div class="user">
            <h1 class="name">
                <u>{{screen_name}}</u>
            </h1>
            <img id="profilePic" src={{image}}>
            <hr>

            <div id="gameView">
                <h2 class="title">
                    <u>Games</u>
                </h2>

                {{#each Posts}}
                <img class="gamePreview" src={{cover.url}}>
                <br>
                <br> {{/each}}
            </div>
        </div>

        <div class="reviews">
            <h1>
                <u>Reviews from {{screen_name}}</u>
            </h1>
            {{#each Posts}}
            <h2>Title : {{title}}</h2>
            <p>Review : {{body}}</p>
            <br>
            <button class="delete-post" data-id="{{this.id}}">Delete Review</button>
            <button class="edit-post" data-id="{{this.id}}">Edit Review</button>
            {{/each}}
        </div>

    </div>

</div>
</div>