<div id="main-body">
    <div class="wrapper">
        <div class="user">
            <h1 class="name">
                <u>{{dataValues.screen_name}}</u>
            </h1>
            <img id="profilePic" src={{dataValues.image}}>
            <hr>

            <div id="gameView">
                <h2 class="title">
                    <u>Games</u>
                </h2>

                {{#each Posts}}
                <img class="gamePreview" src={{cover.url}}>
                <br>
                <br> {{/each}}
            </div>
        </div>

        <div class="reviews">
            <h1>
                <u>Reviews from {{dataValues.screen_name}}</u>
            </h1>
            {{#each Posts}}
            <h2>Review for : {{gameName}}</h2>
            <h3>Title : {{title}}</h2>
            <p>Review : {{body}}</p>
            <br>
            <button class='delete-post' id="{{id}}" name='{{gameName}}'>Delete Review</button>
            <button class="toggle-edit" id="{{id}}">Edit Review</button>
            {{/each}}
        </div>

    </div>

</div>
</div>